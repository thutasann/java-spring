{
	"Java Main Method": {
		"prefix": "main",
		"body": ["public static void main(String[] args) {", "    $0", "}"],
		"description": "Create a main method"
	},
	"Print Statement": {
		"prefix": "sout",
		"body": ["System.out.println(${1:\"Hello, World!\"});"],
		"description": "Shortcut for System.out.println"
	},
	"Class Definition": {
		"prefix": "class",
		"body": ["public class ${1:ClassName} {", "    $0", "}"],
		"description": "Create a new Java class"
	},
	"If-Else Statement": {
		"prefix": "ifelse",
		"body": [
			"if (${1:condition}) {",
			"    ${2:// code here}",
			"} else {",
			"    ${3:// code here}",
			"}"
		],
		"description": "Insert an if-else statement"
	},
	"For Loop": {
		"prefix": "for",
		"body": [
			"for (int ${1:i} = 0; ${1:i} < ${2:10}; ${1:i}++) {",
			"    ${3:// code here}",
			"}"
		],
		"description": "Create a for loop"
	},
	"While Loop": {
		"prefix": "while",
		"body": ["while (${1:condition}) {", "    ${2:// code here}", "}"],
		"description": "Create a while loop"
	},
	"Try-Catch Block": {
		"prefix": "trycatch",
		"body": [
			"try {",
			"    ${1:// code here}",
			"} catch (${2:Exception} ${3:e}) {",
			"    ${4:// handle exception}",
			"}"
		],
		"description": "Insert a try-catch block"
	},
	"Public Method": {
		"prefix": "method",
		"body": [
			"public ${1:void} ${2:methodName}(${3:parameters}) {",
			"    ${4:// code here}",
			"}"
		],
		"description": "Create a public method"
	},
	"Field Definition": {
		"prefix": "prop",
		"body": ["private ${1:type} ${2:fieldName};"],
		"description": "Define a property (field) in a Java class"
	}
}
